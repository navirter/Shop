@model Shop.Application.Cart.GetCart.Response
@{
}


<div>
    <h2>Small Cart Component</h2>
    @foreach (var product in Model.ProductViewModels)
    {
        <p>@product.Name</p>
        <p>@product.ValueToShow</p>
        <p>@product.Qty</p>
        <p>@product.StockId</p>
        <hr />
    }
    <label>Total sum: @Model.TotalPrice</label>
    <label><a asp-page="/Checkout/Payment">Payment page</a></label>
</div>
