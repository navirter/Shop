@model Shop.Application.Cart.GetCart.Response
@{
}


<div>
    <p class="title">Cart</p>
    @foreach (var product in Model.ProductViewModels)
    {
        <article class="media">
            <figure class="media-left">
                <p class="image is-128x128">
                    <img src="~/images/Queek Headtaker.jpg" />
                </p>
            </figure>
            <div class="media-content">
                <div class="content">
                    <p class="title">@product.Name</p>
                    <div class="level">
                        <div class="level-item">Quanity: @product.Qty</div>
                        <div class="level-item">Size: @product.StockId</div>
                        <div class="level-item">Price: @product.ValueToShow</div>
                    </div>
                </div>
            </div>
        </article>
    }
    <label>Total sum: @Model.TotalPrice</label>
    @*<label><a asp-page="/Checkout/Payment">Payment page</a></label>*@
</div>
