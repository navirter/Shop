<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/bulma-0.7.4/css/bulma.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">      @* = include="Production" *@
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="~/lib/bulma-0.7.4/css/bulma.css" rel="stylesheet" />
    </environment>
</head>
<body>
    @* obsolete version
            <a asp-page="/Admin/Index">Admin</a>
        <a asp-page="/Index">Main</a>
        <a asp-page="/Account/Login">Login</a>
        <a asp-controller="Account" asp-action="Logout">Sign Out</a>*@

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" asp-page="/Index">
                    <img src="~/images/Queek Headtaker.jpg" width="64" height="64" />
                    @*<img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">*@
                </a>

                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>
            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-item" asp-page="/Admin/Index">
                            Admin
                        </a>
                    }
                </div>

                <div class="navbar-end">
                    <vc:cart view="Small"></vc:cart>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-item" asp-controller="Account" asp-action="Logout">
                            Sign Out
                        </a>
                    }
                    @*else
                        {
                            <a class="navbar-item" asp-page="/Accounts/login">
                                Sign In
                            </a>
                        }*@
                </div>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer class="footer">
        <div class="content has-text-centered">
            <p>Copyrights at Shop.UI - 2019 Okey <a asp-page="/Admin/Index">Navirter</a></p>
        </div>
    </footer>


    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @section scripts{
        <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
