@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@*Word 'Model' can be used to access the IndexModelClass instance, which is defined in the Index.cshtml.cs file*@

<div id="prodApp" class="section">
    <br />
    <div class="columns is-multiline is-mobile">
        @*category column*@
        <div class="column is-6">
            <ul class="menu-list">                
                <li v-for="category in categories">
                    <a @@click="selectCategory(category)">
                        {{category}}
                    </a>
                </li>
            </ul>
        </div>
        @*products column*@
        <div class="column is-3-desktop is-4-tablet is-6-mobile">
            <div v-for="product in products">
                <a asp-page="Product" asp-route-name={{selectedProductNameForRouting}}>
                    <div class="card">
                        <div class="card-content">
                            <p class="title is-size-6">
                                {{selectedProductTitleToShow}}
                            </p>
                            <p class="subtitle">
                                {{selectedProductDescription}}
                            </p>
                            <div v-if="selectedProductPlentyInStock" class="notification is-paddingless has-text-centered">
                                Many in Stock
                            </div>
                            <div v-if="selectedProductLowInStock" class="notification is-warning is-paddingless has-text-centered">
                                Low in Stock
                            </div>
                            <div v-if="selectedProductNoInStock" class="notification is-danger is-paddingless has-text-centered">
                                None in Stock
                            </div>
                        </div>
                        <div class="card-image">
                            <figure class="image is-4by3">
                                @*TODO: Fit here a unique picture*@
                                <img src="~/images/Queek Headtaker.jpg" />
                                @*<img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">*@
                            </figure>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <br />
</div>
@*@await Component.InvokeAsync("Cart", new { view = "Small"})*@


@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>    
    <script src="~/js/products.js"></script>
}