@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@*Word 'Model' can be used to access the IndexModelClass instance, which is defined in the Index.cshtml.cs file*@

<div class="section">
    <br />
    <div class="columns is-multiline is-mobile">
        @foreach (var category in Model.Products.ProductViewModelsByCategory)
        {
            @foreach (var product in category)
            {
                <div class="column is-3-desktop is-4-tablet is-6-mobile">
                    <a asp-page="Product" asp-route-name="@product.Name.Replace(" ", "-")">
                        <div class="card">
                            <div class="card-content">
                                <p class="title is-size-6">
                                    @product.Name @product.Value
                                </p>
                                <p class="subtitle">
                                    @product.Description
                                </p>
                                @{
                                    string cssClass = "notification";
                                    string message = "";
                                    if (product.StockCount == 0)
                                    {
                                        cssClass += " is-danger";
                                        message = "Out of Stock";
                                    }
                                    else if (product.StockCount <= 10)
                                    {
                                        cssClass += " is-warning";
                                        message = "Low on Stock";
                                    }
                                }
                                @if (product.StockCount <= 10)
                                {
                                    <div class="@cssClass is-paddingless has-text-centered">
                                        @message
                                    </div>
                                }
                            </div>
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    @*TODO: Fit here a unique picture*@
                                    <img src="~/images/Queek Headtaker.jpg" />
                                    @*<img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">*@
                                </figure>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
    <br />
</div>
