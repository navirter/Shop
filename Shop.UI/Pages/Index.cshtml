@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@*Word 'Model' can be used to access the IndexModelClass instance, which is defined in the Index.cshtml.cs file*@

<div>
    <form method="post">
        <label>Name</label>
        <input asp-for="Product.Name" />
        <label>Description</label>
        <input asp-for="Product.Description" />
        <label>Value</label>
        <input asp-for="Product.Value" />
        <input type="submit" value="Save Product" />
    </form>
</div>>

<div>    
    @foreach (var product in Model.Products)
    {
    <p>
        @product.Name - @product.Description - @product.Value
    </p>
    }
</div>